from aiogram.types import ReplyKeyboardMarkup, KeyboardButton

def get_main_keyboard():
    keyboard = ReplyKeyboardMarkup(
        keyboard=[
            [KeyboardButton(text='üéØ –ò–≥—Ä—ã —Å–µ–≥–æ–¥–Ω—è'), KeyboardButton(text='üìÖ –ö–∞–ª–µ–Ω–¥–∞—Ä—å –∏–≥—Ä')],
            [KeyboardButton(text='üèÄ –ú–æ—è –∫–æ–º–∞–Ω–¥–∞'), KeyboardButton(text='‚öôÔ∏è –ù–∞—Å—Ç—Ä–æ–π–∫–∏')]
        ],
        resize_keyboard=True
    )
    return keyboard

